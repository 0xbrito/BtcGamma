# Server Configuration
PORT=3000
NODE_ENV=development

# Demo Mode (set to true to mock blockchain transactions)
MOCK_MODE=true

# Lightning Configuration - Choose ONE method:

# OPTION 1: Nostr Wallet Connect (Recommended - Easiest)
# Get your NWC URL from Alby or other NWC-enabled wallet
# Format: nostr+walletconnect://...
NWC_URL=your_nwc_connection_string

# OPTION 2: LND Node (Advanced - Requires running LND)
LND_MACAROON=your_admin_macaroon_hex
LND_SOCKET=localhost:10009
LND_CERT_PATH=/path/to/tls.cert

# HyperEVM Configuration
HYPEREVM_RPC_URL=https://rpc.hyperliquid.xyz
HYPEREVM_PRIVATE_KEY=your_private_key_here

# Contract Addresses - HyperEVM Mainnet
VAULT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
LSAT_TOKEN_ADDRESS=0x20000000000000000000000000000000000000c5
UBTC_TOKEN_ADDRESS=0x20000000000000000000000000000000000000c6
DEX_ROUTER_ADDRESS=0x20000000000000000000000000000000000000c7

# Bridge Configuration
SATS_TO_LSAT_RATIO=1
MIN_DEPOSIT_SATS=10

# Database
DATABASE_PATH=./data/deposits.db

